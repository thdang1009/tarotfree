---
import Layout from '../../layouts/Layout.astro';
import { detectLanguage, createTranslator } from '../../utils/i18nServer';
import { loadCards } from '../../utils/loadData';
import { withLang } from '../../utils/linkHelper';

export const prerender = false;

// Detect language
const lang = detectLanguage(Astro.request);

// Create translator
const t = createTranslator(lang, 'common');

// Load language-specific cards
const cardsData = loadCards(lang);

// Get slug from params
const { slug } = Astro.params;

// Find the card by slug
const card = cardsData.find(c => c.slug === slug);

// If card not found, redirect to cards page
if (!card) {
  return Astro.redirect(withLang('/cards', lang));
}

// Get related cards
const relatedCards = card.relationships.supporting_cards
  .map((name: string) => cardsData.find((c: any) => c.name === name))
  .filter(Boolean)
  .slice(0, 3);
---

<Layout
  title={`${card.name} - Tarot Card Meaning`}
  description={`${card.name}: ${card.description} Learn the upright and reversed meanings for work, love, health, and spirituality.`}
>
  <div class="container mx-auto px-4 py-12">
    <!-- Breadcrumb -->
    <div class="mb-6 text-sm text-gray-600">
      <a href={withLang('/', lang)} class="hover:text-violet-medium">{t('cardDetail.breadcrumb.home')}</a>
      <span class="mx-2">→</span>
      <a href={withLang('/cards', lang)} class="hover:text-violet-medium">{t('cardDetail.breadcrumb.cardLibrary')}</a>
      <span class="mx-2">→</span>
      <span class="text-violet-deep">{card.name}</span>
    </div>

    <div class="max-w-5xl mx-auto">
      <!-- Card Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-violet-deep">
          {card.name}
        </h1>
        <div class="flex justify-center gap-4 text-sm mb-4">
          {card.arcana === 'major' ? (
            <span class="px-4 py-1 bg-violet-deep text-white rounded-full">
              {t('cardDetail.arcana.major')}
            </span>
          ) : (
            <>
              <span class="px-4 py-1 bg-violet-medium text-white rounded-full">
                {t('cardDetail.arcana.minor')}
              </span>
              <span class="px-4 py-1 bg-gold-soft text-white rounded-full capitalize">
                {card.suit}
              </span>
            </>
          )}
        </div>
        <p class="text-xl text-gray-700 mb-4">
          {card.description}
        </p>
        <div class="flex flex-wrap justify-center gap-2">
          {card.keywords.map((keyword) => (
            <span class="px-3 py-1 bg-violet-light bg-opacity-20 text-violet-deep rounded-full text-sm">
              {keyword}
            </span>
          ))}
        </div>
      </div>

      <!-- Card Image and Quick Meanings -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Card Image -->
        <div>
          <div class="aspect-[2/3] rounded-lg overflow-hidden shadow-2xl">
            <img
              src={card.image}
              alt={card.name}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Quick Meanings -->
        <div class="space-y-6">
          <!-- Upright -->
          <div class="bg-green-50 border-l-4 border-green-500 p-6 rounded-r-lg">
            <h2 class="text-2xl font-heading text-green-700 mb-3">
              {t('cardDetail.uprightMeaning')}
            </h2>
            <p class="text-gray-800 leading-relaxed">
              {card.upright.short}
            </p>
          </div>

          <!-- Reversed -->
          <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-r-lg">
            <h2 class="text-2xl font-heading text-red-700 mb-3">
              {t('cardDetail.reversedMeaning')}
            </h2>
            <p class="text-gray-800 leading-relaxed">
              {card.reversed.short}
            </p>
          </div>
        </div>
      </div>

      <!-- Detailed Meanings -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-3xl font-heading text-violet-deep mb-8 text-center">
          {t('cardDetail.detailedInterpretations')}
        </h2>

        <!-- Upright Detailed -->
        <div class="mb-8">
          <h3 class="text-2xl font-heading text-green-700 mb-4">
            {t('cardDetail.uprightPosition')}
          </h3>
          <div class="space-y-4 text-gray-700">
            <div>
              <h4 class="font-bold text-violet-medium mb-1">{t('cardDetail.generalMeaning')}</h4>
              <p>{card.upright.general}</p>
            </div>
            {card.upright.work && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.workCareer')}</h4>
                <p>{card.upright.work}</p>
              </div>
            )}
            {card.upright.love && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.loveRelationships')}</h4>
                <p>{card.upright.love}</p>
              </div>
            )}
            {card.upright.health && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('cardDetail.healthWellness')}</h4>
                <p>{card.upright.health}</p>
              </div>
            )}
            {card.upright.spirituality && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.spirituality')}</h4>
                <p>{card.upright.spirituality}</p>
              </div>
            )}
          </div>
        </div>

        <hr class="my-8 border-gray-300" />

        <!-- Reversed Detailed -->
        <div>
          <h3 class="text-2xl font-heading text-red-700 mb-4">
            {t('cardDetail.reversedPosition')}
          </h3>
          <div class="space-y-4 text-gray-700">
            <div>
              <h4 class="font-bold text-violet-medium mb-1">{t('cardDetail.generalMeaning')}</h4>
              <p>{card.reversed.general}</p>
            </div>
            {card.reversed.work && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.workCareer')}</h4>
                <p>{card.reversed.work}</p>
              </div>
            )}
            {card.reversed.love && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.loveRelationships')}</h4>
                <p>{card.reversed.love}</p>
              </div>
            )}
            {card.reversed.health && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('cardDetail.healthWellness')}</h4>
                <p>{card.reversed.health}</p>
              </div>
            )}
            {card.reversed.spirituality && (
              <div>
                <h4 class="font-bold text-violet-medium mb-1">{t('labels.spirituality')}</h4>
                <p>{card.reversed.spirituality}</p>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Related Cards -->
      {relatedCards.length > 0 && (
        <div class="mb-12">
          <h2 class="text-3xl font-heading text-violet-deep mb-6 text-center">
            {t('cardDetail.supportingCards')}
          </h2>
          <div class="grid grid-cols-3 gap-4">
            {relatedCards.map((relatedCard: any) => (
              <a
                href={withLang(`/cards/${relatedCard.slug}`, lang)}
                class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all card-hover p-4 text-center"
              >
                <div class="aspect-[2/3] rounded-lg overflow-hidden mb-3">
                  <img
                    src={relatedCard.image}
                    alt={relatedCard.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <h3 class="font-heading text-sm text-violet-deep">
                  {relatedCard.name}
                </h3>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- CTA -->
      <div class="text-center space-y-4">
        <a
          href={withLang(`/?topic=${card.name.toLowerCase()}`, lang)}
          class="inline-block px-8 py-3 bg-violet-deep text-white rounded-lg hover:bg-violet-medium transition-colors text-lg"
        >
          {t('cardDetail.getReadingWith')} {card.name}
        </a>
        <div>
          <a href={withLang('/cards', lang)} class="text-violet-medium hover:text-gold-soft transition-colors">
            {t('cardDetail.backToCardLibrary')}
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
